{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "linterOptions": {
        "exclude": [
            "node_modules/**",
            "src/locales/*.json"
        ]
    },
    "rules": {
        "semicolon": true,
        "max-line-length": [
            true,
            120
        ],
        "indent": [
            true,
            "spaces",
            4
        ],
        "interface-name": false,
        "no-consecutive-blank-lines": false,
        "object-literal-sort-keys": false,
        "ordered-imports": true,
        "quotemark": [
            true,
            "single",
            "avoid-escape",
            "avoid-template"
        ],
        "member-access": true,
        "space-before-function-paren": false,
        "only-arrow-functions": false,
        "no-empty-interface": false,
        "no-shadowed-variable": [
            true,
            {
                "class": true,
                "enum": true,
                "function": true,
                "interface": true,
                "namespace": true,
                "typeAlias": true,
                "typeParameter": true
            }
        ],
        "variable-name": {
            "options": [
                "ban-keywords",
                "check-format",
                "allow-leading-underscore",
                "allow-pascal-case"
            ]
        }
    }
}